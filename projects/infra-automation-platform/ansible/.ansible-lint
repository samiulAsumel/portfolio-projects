---
# ansible-lint configuration
skip_list:
  - fqcn[action-core]  # Skip FQCN warnings for core modules
  - yaml[trailing-spaces]  # Skip trailing space warnings

warn_list:
  - experimental  # Allow experimental rules as warnings only

# Use production profile
profile: production

# Exclude paths
exclude_paths:
  - .git
  - .venv
  - .tox
